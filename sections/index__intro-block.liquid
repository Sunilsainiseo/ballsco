{% assign block = section.settings %}
<div class="grid grid--f flex row-wrap align-center justify-center block-rel">
  <div class="block-6/12 cell-l cell-r row--l block-rel @mobile-mobile__block-12/12">
    {% comment %}
    <div class="index-wsb-badge index-wsb-badge--mobile @mobile-mobile__show">
      {% render 'svg' with 'wsb' %}
    </div> 
    {% endcomment %}
    <div class="block-9/12 block-c @mobile-tablet__block-11/12 @mobile-mobile__block-12/12">
      <h2 class="h-style h1-style t-accent row">{{block.heading}}</h2>
      <div class="rte-content {% if block.button_url%}row--m {% endif %}">
        <p>{{block.paragraph}}</p>
      </div>        
      {% if block.button_url %}
        <a href="{{block.button_url}}"  class="btn btn--fancy d-iblock">{{block.button_text}}</a>
      {% endif %}
    </div>
  </div>
  <div class="block-6/12 cell-l cell-r row--l block-rel {% comment %}index-wsb-wrapper{% endcomment %} @mobile-mobile__block-12/12 cstmintro">
    {% comment %}
    <div class="index-wsb-badge index-wsb-badge--desktop @mobile-mobile__hide">
      {% render 'svg' with 'wsb' %}
    </div>
    {% endcomment %}
   <div class="block-12/12 block-rel">
      {% render 'lazy_img', _image: block.image , size:'1024' %}     
    </div>
  </div>
</div>

{% comment %}
<script>
  $(function(){
    var wsbWrapper = $('.index-wsb-wrapper'),
        $wsbWindow = $(window)
        
    $wsbWindow.on('load resize scroll',function(){
      $wsbWindow.scrollTop() >= wsbWrapper.offset().top ? wsbWrapper.addClass('index-wsb-wrapper--isTop') : wsbWrapper.removeClass('index-wsb-wrapper--isTop')
    })
  })
</script>
{% endcomment %}


{% schema %}
{ 

  "name":"index/intro-block",
 
  "settings":[ 
    { 
      "type":"image_picker",
      "id":"image",
      "label":"image"
    },
    
    { 
      "type":"text",
      "id":"heading",
      "label":"heading"
    },
    { 
      "type":"textarea",
      "id":"paragraph",
      "label":"paragraph"
    },
    { 
      "type":"text",
      "id":"button_text",
      "label":"button text"
    },
    { 
      "type":"url",
      "id":"button_url",
      "label":"button url"
    }
  ]
}
{% endschema %}
