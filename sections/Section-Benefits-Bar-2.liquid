<div class="header-text">
  <div class="grid grid--f row--l text-center">
    <h2 class="t-blue head-h2">{{ section.settings.title}}</h2>
    <p>{{ section.settings.text}}</p>
  </div>
</div>
<div class="block-reviews d-flex flex-nowrap grid grid--f flex row-wrap block-rel">
  {% for block in section.blocks %}
  <div class="block-4/12 cell-l cell-r row--l  @mobile-mobile__block-6/12">
    <div class="grid grid--f flex row-wrap block-rel">
      <div class="reviews-box">
        <div class="customer-img">
          <img src="{{ block.settings.image | img_url: '' }}" alt="" />
        </div>
        <h3>{{ block.settings.title_1}}</h3>
        {{ block.settings.text_2}}
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% if section.settings.link != blank %}
<div class="footer-text">
  <div class="grid grid--f text-center">
    <a id="" href="{{ section.settings.link }}" class="btn">BUY NOW</a>
  </div>
</div>
{% endif %}

<style>
  .section-benefits-bar-2 {
    background-color: #000;
    padding-top: 55px;
    padding-bottom: 55px;
  }
  .section-benefits-bar-2 .header-text {
    text-align: center;
  }
  .section-benefits-bar-2 .header-text .head-h2 {
    font-size: 52px;
    line-height: 56px;
    text-transform: none;
    color: #fff;
    font-family: spoof;
    font-weight: 700;
  }
  .section-benefits-bar-2 .reviews-box {
    text-align: center;
    width: 100%;
  }
  .section-benefits-bar-2 .reviews-box .customer-img {
    max-width: 120px;
    margin: 0 auto;
    display: block;
    overflow: hidden;
  }
  .section-benefits-bar-2 .reviews-box .customer-img img {
    display: block;
    width: 100%;
    height: auto;
  }
  .section-benefits-bar-2 .reviews-box h3 {
    font-size: 22px;
    line-height: 26px;
    margin: 20px 0 10px;
    color: #fff;
    text-transform: uppercase;
  }
  .section-benefits-bar-2 .reviews-box p {
    margin: 12px 0;
    font-size: 20px;
    line-height: 22px;
    color: #fff;
    font-weight: 600;
  }
  .section-benefits-bar-2 .reviews-box p,
  .section-benefits-bar-2 .reviews-box p strong {
    font-weight: 600;
  }
  .footer-text a.btn {
    background: #015db9;
    color: #fff;
    display: block;
    text-align: center;
    padding: 15px;
    border: none;
    border-radius: 15px;
    overflow: hidden;
    max-width: 180px;
    font-size: 28px;
    font-weight: 600;
    margin: 0 auto;
  }
  .footer-text a.btn:hover {
    opacity: 0.9;
  }

  @media only screen and (min-width: 992px) {
    .section-benefits-bar-2 .reviews-box p {
      padding: 0 15px;
    }
  }

 @media only screen and (max-width: 1199px) {
  .section-benefits-bar-2 .header-text .head-h2 {
    font-size: 50px;}
  }
   @media only screen and (max-width: 991px) {
  .section-benefits-bar-2 .header-text .head-h2 {
    font-size: 46px;}
  }
  @media only screen and (max-width: 767px) {
    .section-benefits-bar-2 .block-reviews {
      -ms-flex-wrap: wrap;
      flex-wrap: wrap;
    }
    .section-benefits-bar-2 .reviews-box {
      max-width: 320px;
      margin: 0 auto;
    }
    .section-benefits-bar-2 .header-text .head-h2 {
      font-size: 42px;
      line-height: 44px;
      padding: 0 15px;
    }
    .section-benefits-bar-2 {
      padding-top: 30px;
    }

  }


</style>

{% schema %}
{
"name": "Section Benefits Bar 2",
"class": "section-benefits-bar-2",
"max_blocks": 4,
"settings": [
{
"type": "text",
"id": "title",
"label": "Header"
},
{
"type": "textarea",
"id": "text",
"label": "SubText"
},
{
"type": "url",
"id": "link",
"label": "Button"
}
],
"blocks": [
{
"name": "Block",
"type": "Block",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "text",
"id": "title_1",
"label": "Heading"
},

{
"type": "richtext",
"id": "text_2",
"label": "Text"
}
]
}
]
}
{% endschema %}

