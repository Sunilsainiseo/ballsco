
<div class="{%if section.settings.margin%}row--l{%endif%} swiper-container" id="{{section.id}}">
  <ul class="swiper-wrapper">
    {% for block in section.blocks %}
    <li class="swiper-slide">
      <div class="block-rel">
        {% if block.settings.bgImage %}
        <div class="{% if block.settings.bgImage__mobile %}@mobile-tablet__hide {% endif %}">
          {% render 'lazy_img-4', _image:block.settings.bgImage ,  size:'2048' %}
        </div>
        {% endif %}
        {% if block.settings.bgImage__mobile %}
        <div class="@mobile-tablet__show">
          {% render 'lazy_img-4', _image:block.settings.bgImage__mobile ,  size:'1024' %}
        </div>
        {% endif %}
        <div class="flex  ct--l cb--l block-abc block-12/12 block-fh">
          <div class="flex col-wrap align-center justify-center grid grid--f @mobile-tablet__align-top">
            <div class="grid grid--f flex row-wrap align-center {{block.settings.layout}} {{section.id}}__text @mobile-tablet__tac @mobile-tablet__justify-center">
              <div class="cell-l cell-r block-7/12 @mobile-grid__block-8/12 @mobile-large__block-9/12 @mobile-tablet__block-12/12">
                <h2 class="h-style hxl-style row--m cstmhslidertxt">{{block.settings.heading}}</h2>

                {% if block.settings.button_url %}
                <div class=" @mobile-tablet__hide">
                  <a href="{{block.settings.button_url}}"  class="new-style btn btn--bdr btn--fancy cstmslide d-iblock">{{block.settings.button_text}}</a>
                </div>
                <div class=" @mobile-tablet__show">
                  <a href="{{block.settings.button_url}}"  class="new-style btn btn--accent btn--fancy d-iblock">{{block.settings.button_text}}</a>
                </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </li>
    <style>
         a.btn.new-style {
          width: 100%;
    margin: 0;
    max-width: 250px !important;
    padding: 0 12px;
    height: 50px;
    border-radius: 10px;
    text-transform: uppercase;
    font-weight: 600;
    z-index: 1;
    line-height: 45px;
       font-size: 14px;
      }
       a.btn.new-style:after{
      display:none;
      }
      .{{section.id}}__text{
        color:{{block.settings.text_color}};
      }
      @media screen and (max-width: 1024px) {
        .{{section.id}}__text{
          color:{{block.settings.text_color__mobile}};
        }
      }
        @media screen and (max-width: 767px) {
      a.btn.new-style {
    font-size: 16px;
}
      }
      .cstmhslidertxt {
        font-size: 70px;
        font-weight: 900;
        line-height: 1;
        margin-bottom: 15px!important;
      }
      .secondline {font-size: 96px; }
      .cstmhslidertxt {margin: 0;}
      @media screen and (min-width: 767px) {
        .cstmslide {
          background: #015db9 !important;
          color: #fff !important;
          border: 2px solid #fff !important;
          position: relative;
        }
        /*
        .btn.cstmslide {
        position: absolute;
        bottom: 15%;
        right: 21%;
      }*/
      }
      /*
      @media screen and (min-width: 1025px) {
      .btn.cstmslide {
      position: absolute;
      bottom: 15%;
      right: 21%;
      }
      }

      @media screen and (max-width: 1024px) {
      #index__slideshow .btn.btn--accent {
      position: absolute;
      bottom: 50%;
      right: 23%;
      }

      }

      @media screen and (max-width: 639px) {
      #index__slideshow .btn.btn--accent {
      position: absolute;
      bottom: 38%;
      right: 15%;
      }
      }
      */

      .cstmslide::after {background: #fff !important;}
    </style>
    {% endfor %}
  </ul>
</div>

{% comment %}
Update Pagination on Hero Slide Home Page
{% endcomment %}
<script type="lazyload2">
  setTimeout(function(){
    $('#{{section.id}}').wbskSwiper({
      slidesPerView:1,
      pagination: {
      el: '.swiper-pagination',
      },
      })
  })
</script>


{% schema %}
{ 
"presets":[ 
{ 
"name":"index/hero"
}
],
"name":"index/hero",
"max_blocks":5,
"settings":[ 
{ 
"type":"checkbox",
"id":"margin",
"label":"margin @ bottom?"
}
],
"blocks":[ 
{ 
"type":"block",
"name":"block",
"settings":[ 
{ 
"type":"select",
"id":"layout",
"label":"layout",
"default":"justify-right",
"options":[ 
{ 
"value":"justify-left",
"label":"left"
},
{ 
"value":"justify-right",
"label":"right"
},    
{ 
"value":"justify-center tac",
"label":"center"
}
]
},
{ 
"type":"image_picker",
"id":"bgImage",
"label":"Image"
},
{ 
"type":"image_picker",
"id":"bgImage__mobile",
"label":"Image"
},
{ 
"type":"color",
"id":"text_color",
"label":"text color"
},

{ 
"type":"color",
"id":"text_color__mobile",
"label":"text color mobile"
},
{ 
"type":"text",
"id":"heading",
"label":"heading"
},

{ 
"type":"text",
"id":"button_text",
"label":"button text"
},
{ 
"type":"url",
"id":"button_url",
"label":"button url"
}
]
}
]
}
{% endschema %}
