<div class="header-text d-flex">
  <div class="grid grid--f row--l text-center">
    <h2 class="t-blue head-h2">{{ section.settings.title}}</h2>
    <p>{{ section.settings.text}}</p>
  </div>
</div>
<div class="block-reviews d-flex flex-nowrap grid grid--f flex row-wrap block-rel">
  {% for block in section.blocks %}
  <div class="reviews-item block-4/12 cell-l cell-r row--l  @mobile-mobile__block-12/12">
    <div class="grid grid--f flex row-wrap block-rel">
      <div class="reviews-box">

        <div class="customer-img">
          <img src="{{ block.settings.image | img_url: '' }}" alt="" />
        </div>
        <div class="customer-rv-des">
          <h3>{{ block.settings.title_1}}</h3>

          {{ block.settings.text_2}}

          {% if block.settings.link != blank %}
          <a class="btn" href="{{ block.settings.link }}">COMMANDER</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
</div>

<style>
  .section-three-products {
    background-image: url({{ 'line-bg.png' | file_url }});
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
  }
  .section-three-products .header-text {
    text-align: center;
  }
  .section-three-products .header-text .head-h2 {
    font-size: 50px;
    line-height: 60px;
  }
  .section-three-products .reviews-item .block-rel {
    background-color: #fff;
    border: 4px solid #000;
    height: 100%;
    position: relative;
    border-radius: 30px;
  }
  .section-three-products .reviews-box {
    text-align: left;
    padding: 0 20px 20px;
    position: relative;
  }
  .section-three-products .reviews-box .customer-rv-des {
    position: relative;
  }
  .section-three-products .reviews-box .btn {
    padding: 0px 15px;
    background-color: #a4ddf1;
    text-transform: uppercase;
    color: #000;
    font-weight: 600;
    font-size: 22px;
    -webkit-border-radius: 15px;
    -moz-border-radius: 15px;
    border-radius: 15px;
    letter-spacing: 1px;
    position: absolute;
    right: 0px;
    top: 25px;
    display: block;
    line-height: 42px;
    height: 40px;
  }
  .section-three-products .reviews-box .btn:hover {
    background-color: #015db9;
    color: #fff;
  }
  .section-three-products .reviews-box .customer-img {
    max-width: 100%;
    width: 100%
      margin: 0 auto;
    display: block;
    overflow: hidden;
  }
  .section-three-products .reviews-box .customer-img img {
    display: block;
    width: 100%;
    height: auto;
  }
  .section-three-products .reviews-box h3 {
    font-size: 33px;
    line-height: 38px;
    font-weight: 700;
    color: #000;
    margin: 25px 0 10px;
    position: relative;
  }
  .section-three-products .reviews-box h3:before {
    content: "";
    display: block;
    width: 50px;
    height: 3px;
    background-color: #000;
    margin-bottom: 15px;
  }
  .section-three-products .reviews-box p {
    margin: 12px 0 0;
    font-size: 16px;
    line-height: 20px;
  }
  .section-three-products .d-flex{
    justify-content: center;
  }
  .section-three-products .block-4\/12{
    width: 38%;
  }
  @media only screen and (max-width: 1199px) {
    .section-three-products .block-4\/12{
      width: 50%;
    }
  }
   @media only screen and (max-width: 991px) {
    .section-three-products .reviews-box .btn{
      font-size: 20px;
    }
    .section-three-products .reviews-box h3 {
      font-size: 30px;
      line-height: 34px;
    }
  }
  @media only screen and (max-width: 767px) {
    .section-three-products .block-reviews {
      -ms-flex-wrap: wrap;
      flex-wrap: wrap;
    }
    .section-three-products .reviews-box {
      margin: 0 auto;
    }
    .section-three-products .header-text .head-h2 {
      font-size: 42px;
      line-height: 44px;
      padding: 0 15px;
    }
    .section-three-products .block-reviews .reviews-item {
      margin-bottom: 40px;
    }
    .section-three-products .reviews-box h3 {
      font-size: 28px;
      line-height: 32px;
    }
    .section-three-products .reviews-box .btn {
      padding: 0px 12px;
      font-size: 18px;
    }
.section-three-products .block-4\/12{
      width: 100%;
    }
  }

</style>

{% schema %}
{
"name": "Section Three Products",
"class": "section-three-products",
"max_blocks": 3,
"settings": [
{
"type": "text",
"id": "title",
"label": "Header"
},
{
"type": "textarea",
"id": "text",
"label": "SubText"
}
],
"blocks": [
{
"name": "Block",
"type": "Block",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "text",
"id": "title_1",
"label": "Heading"
},
{
"type": "url",
"id": "link",
"label": "Link"
},
{
"type": "richtext",
"id": "text_2",
"label": "Text"
}
]
}
]
}
{% endschema %}