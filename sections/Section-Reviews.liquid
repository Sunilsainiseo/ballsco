"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "text",
"id": "title_1",
"label": "Heading"
},
{
"type": "url",
"id": "link",
"label": "Link"
},
{
"type": "richtext",
"id": "text_2",
"label": "Text"
}
]
}
]
}
