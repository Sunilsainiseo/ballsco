<div class="header-text">
  <div class="grid grid--f row--l text-center">
    <h2 class="t-blue head-h2">{{ section.settings.title}}</h2>
    <p>{{ section.settings.text}}</p>
  </div>
</div>
<div class="block-reviews d-flex flex-nowrap grid grid--f flex row-wrap block-rel">
  {% for block in section.blocks %}
  <div class="Sub-Item-bt block-4/12 cell-l cell-r row--l  @mobile-mobile__block-6/12">
    <div class="grid grid--f flex row-wrap block-rel">
      <div class="reviews-box">
        <div class="customer-img">
          <img src="{{ block.settings.image | img_url: '' }}" alt="" />
        </div>
        <h3>{{ block.settings.title_1}}</h3>
        {{ block.settings.text_2}}
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% if section.settings.link != blank %}
<div class="footer-text">
  <div class="grid grid--f text-center">
    <a id="SUBSCRIBE-Click" href="{{ section.settings.link }}" class="btn">S'INSCRIRE</a>
  </div>
</div>
{% endif %}

<script>
  $(document).ready(function(){
    // thay .classbutton bang cai #id hoac .class cua button ma trigger click
    $("#SUBSCRIBE-Click").click(function(){
      // thay #elementtoScrollToID bang cai #id de no scroll den cai div do
      $([document.documentElement, document.body]).animate({
        scrollTop: $("{{ section.settings.link }}").offset().top
                     }, 200);
        // cho nay` e thay class chinh xac luon roi
        $('.prod-bar-selector__item.variantIndex_2').click();
      });
    });
</script>

<style>
