  <script>
  $(document).ready(function(){
var highestBox_tit = 0;
    var highestBox_descr = 0;
    // Select and loop the elements you want to equalise
    $('#list_pair .pro_tit', this).each(function(){

      // If this box is higher than the cached highest then store it
      if($(this).height() > highestBox_tit) {
        highestBox_tit = $(this).height(); 
      }
    }); 
   $('#list_pair .descr-pro', this).each(function(){
      if($(this).height() > highestBox_descr) {
        highestBox_descr = $(this).height(); 
      }
    }); 
    // Set the height of all those children to whichever was highest 
    $('#list_pair .pro_tit',this).height(highestBox_tit);
    $('#list_pair .descr-pro',this).height(highestBox_descr);
});
</script>
