<div class="pairs_wellwith Cross-Sell-wr">
    <div id="list_pair" class="grid grid--f flex row-wrap justify-center block-rel custom-collection">    
  
      {% if product.metafields['Pairs Well With'].pairs-well-with %}
  
      {% assign slugs = product.metafields['Pairs Well With'].pairs-well-with | split: ',' %}
      {% for slug in slugs %}
  
      {% assign slugClear = slug | strip %}
      {% assign slugProduct = all_products[slugClear] %}
  
      <div class="block-4/12 cell-l cell-r row--l  @mobile-mobile__block-12/12 item-collection" data-product-id="{{ slugProduct.id }}">
        <div class="crossell-inner">
         <a class="" href="{{ slugProduct.url | within: collection }}">
          <div class="pro-image-cus">
            <span class="wrapper-img">
              <span class="wrapper-img-chill">
                <img class="img-product lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ slugProduct.featured_image | img_url: '' }}" alt="{{ slugProduct.featured_image.alt }}" />
              </span>
            </span>
          </div>
          <div class="Crossel-des_product">
             <div class="pro_tit">{{ slugProduct.title }}
              {%comment%}
              <span class="e">{{ slugProduct.variants.first.price | money}}</span>
              {%endcomment%}
            </div>
            <div class="descr-pro">
              {% assign short = slugProduct.description | split:'[short]' | last | split:'[/short]' | first %}
              <p class="">{{short}}</p>
            </div>
            {%comment%}
            <a class="btn" href="{{ slugProduct.url | within: collection }}">COMMANDER</a>
            {%endcomment%}
            <form action="/cart/add" method="post" enctype="multipart/form-data" data-productid="{{slugProduct.id}}">
              <input class="js-prod-bar-selector__radio cstmvid" type="hidden" name="id" value="{{slugProduct.variants.first.id}}">
              <button class="btn btn_under btn--accent cstmatcbtn">
                <span>COMMANDER</span>
              </button>
            </form>
  
          </div>
         </a>
        </div>
      </div>
  
      {%endfor%}
  
      {% else %}
  
      {% for pro_item in linklists.cross-sell.links %}
      {% assign product_item = pro_item.object %}
      {% assign product_name = pro_item.title %}
      {% assign product_url = pro_item.url %}
      <div class="block-4/12 cell-l cell-r row--m @mobile-mobile__block-12/12 item-collection" data-product-id="{{ product_item.id }}">
        <div class="crossell-inner">
          <a class="" href="{{ product_url }}">
          <div class="pro-image-cus">
            <span class="wrapper-img">
              <span class="wrapper-img-chill">
                <img class="img-product lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ product_item.featured_image | img_url: '' }}" alt="{{ product_item.featured_image.alt }}" />
              </span>
            </span>
          </div>
          <div class="Crossel-des_product">
             <div class="pro_tit">{{ product_item.title }}
              {%comment%}
              <span class="e">{{ product_item.variants.first.price | money}}</span>
              {%endcomment%}
            </div>
            <div class="descr-pro">
              {% assign short = product_item.description | split:'[short]' | last | split:'[/short]' | first %}
              <p class="">{{short}}</p>
            </div>
            {%comment%}
            <a class="btn" href="{{ product_url }}">COMMANDER</a>
            {%endcomment%}
            <form action="/cart/add" method="post" enctype="multipart/form-data" data-productid="{{product_item.id}}">
              <input class="js-prod-bar-selector__radio cstmvid" type="hidden" name="id" value="{{product_item.variants.first.id}}">
              <button class="btn btn_under btn--accent cstmatcbtn">
                <span>COMMANDER</span>
              </button>
            </form>
  
          </div>
          </a>
        </div>
      </div>
      {%endfor%}
      {% endif %}
  
